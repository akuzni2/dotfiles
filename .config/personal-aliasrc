### ALIAS FILE FOR PERSONAL USE. THINGS THAT DONT REALLY CHANGE BETWEEN MY WORK ENVIRONMENTS

alias ll='ls -lah'
alias ls='ls -GFh'

# For Jupyter Notebook
alias light='jt -t grade3 -T -N -f fira -cellw 95%' 
alias medium='jt -t chesterish -T -N -f fira -cellw 95%'
alias dark='jt -t gruvboxd -T -N -f fira -cellw 95%'

# -- Kubectl alias
alias ktx='kubectl ctx'
alias kns='kubectl ns'
alias kpo='kubectl get pod'
